@using OlxWebApplication.Models.ViewModels;
@model OlxWebApplication.Models.ViewModels.ResearchViewModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/index.css">
    <title>OLX</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header__burger">
                @if (ViewBag.Account == null)
                {
                    <div class="header__text"><a asp-action="Registration" asp-controller="Auth">Registration</a></div>

                    <div class="header__text"><a asp-action="Login" asp-controller="Auth">Login</a></div>
                }
                else
                {
                     <a asp-controller="Auth" asp-area="" asp-action="Login">
                        <div class="header__avatar">
                            <img src="@Url.Content("~/images/avatar.png")" />
                        </div>
                     </a>
                }
            </div>

        </div>

        <div class="main">
            @foreach (CategoryViewModel u in ViewBag.Categories)
            {
                 <div>
                    <div class="btn btn-danger mx-2" onclick="selected_category('@u.Name', @u.Id)">@u.Name</div>
                </div>
    
            }
        </div>
    </div>
</body>
</html>
